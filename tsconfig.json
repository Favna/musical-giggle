{
  "extends": [
    "@sapphire/ts-config",
    "@sapphire/ts-config/extra-strict",
    "@sapphire/ts-config/bundler",
    "@sapphire/ts-config/verbatim"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "skipLibCheck": true
  },
  "include": ["src"]
}
